                    <h2> Photography </h2>
                    <!-- Creating a dynamic slideshow -->
                    <img name="slide" width="100%" height="70%" />
                    <script> 
                        var i = 0;          // Counter.
                        var imgs = [        // Images to display in slideshow.
                            "resources/Beach.gif",
                            "resources/IMG_5536.gif"
                        ];      
                        var time = 20000;    // Time out value in milliseconds.
            
                        // Change image function
                        function changeImage(){
                            document.slide.src = imgs[i];
                            if(i < imgs.length - 1) {
                                i++;
                            } 
                            else {
                                i = 0;
                            }
                            setTimeout("changeImage()", time);
                        }
            
                        // Run function when page loads
                        window.onload=changeImage;
                    </script>
